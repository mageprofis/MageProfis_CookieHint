<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_CookieHint>
            <version>1.0.0.0</version>
        </MageProfis_CookieHint>
    </modules>   
    <frontend>
        <layout>
            <updates>
                <cookiehint>
                    <file>mageprofis-cookiehint.xml</file>
                </cookiehint>
            </updates>
        </layout>
        <routers>
            <cookiehint>
                <use>standard</use>
                <args>
                    <module>MageProfis_CookieHint</module>
                    <frontName>cookie-hint</frontName>
                </args>
            </cookiehint>
        </routers>
    </frontend>
    <global>
        <helpers>
            <mageprofis_cookiehint>
                <class>MageProfis_CookieHint_Helper</class>
            </mageprofis_cookiehint>
        </helpers>
        <models>
            <mageprofis_cookiehint>
                <class>MageProfis_CookieHint_Model</class>
            </mageprofis_cookiehint>
        </models>
        <resources>
            <cookiehint_setup>
                <setup>
                    <module>MageProfis_CookieHint</module>
                    <class>MageProfis_CookieHint_Model_Resource_Setup</class>
                </setup>
            </cookiehint_setup>
        </resources>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mageprofis_cookiehint>
                                            <title>Cookie Hint</title>
                                        </mageprofis_cookiehint>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <mageprofis_cookiehint>
            <general>
                <cookie_type>session</cookie_type>
            </general>
        </mageprofis_cookiehint>
    </default>
</config>